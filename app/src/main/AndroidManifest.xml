<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.calpoly.jgunawan.plantinventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPlantActivity"
            android:label="Add a Plant" />
        <activity
            android:name=".PlantCategoryActivity"
            android:label="Select Category" />
        <activity
            android:name=".PlantInformationActivity"
            android:label="Plant Information" />
        <activity
            android:name=".SearchPlantActivity"
            android:label="@string/search_plant_header">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".EditPlantActivity"
            android:label="Edit Plant"/>
    </application>

</manifest>