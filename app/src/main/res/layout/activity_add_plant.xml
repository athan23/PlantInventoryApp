                android:background="@drawable/plant_header"
                android:id="@+id/typeAddPlantEditText"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <!-- USDA Zone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"/>

            <!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/ic_format_list_numbered_black_24px"
                android:contentDescription="@string/min_usda_zone"/>
            -->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="24sp"
                android:hint="@string/min_usda_zone"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="@string/min_usda_zone"
                app:met_floatingLabelTextSize="24sp"
                android:background="@drawable/plant_header"
                android:id="@+id/minUSDAZoneAddPlantEditText"
                android:inputType="number"/>

        </LinearLayout>

        <!-- Availability -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="@string/availability"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="24sp"
                android:hint="@string/availability"
                android:id="@+id/availabilityAddPlantSpinner"/>

            <!--
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:hint="@string/availability"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="@string/availability"
                app:met_floatingLabelTextSize="24sp"
                android:background="@drawable/plant_header"
                android:id="@+id/availabilityAddPlantEditText"
                android:inputType="textCapSentences"/>
            -->

        </LinearLayout>

        <!-- Saleable -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/ic_attach_money_black_24px"
                android:contentDescription="@string/saleable"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saleable"
                    android:textSize="24sp"
                    android:textColor="@color/hintColor"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saleableRowCheckBox"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

            <!--
            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="24sp"
                android:hint="@string/saleable"
                android:id="@+id/saleableAddPlantSpinner"/>
            -->

            <!--
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="24sp"
                android:hint="@string/saleable"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="@string/saleable"
                app:met_floatingLabelTextSize="24sp"
